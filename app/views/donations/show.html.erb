<!-- app/views/teddies/show.html.erb -->
<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @donation.name %></h1>
      <p>Você está contribuíndo com <%= humanized_money_with_symbol(@donation.price) %> para manter esse site!</p>
      <!-- <p>Valor: <%= humanized_money_with_symbol(@donation.price) %></p> -->

      <%= form_with url: orders_path do %>
        <%= hidden_field_tag 'donation_id', @donation.id %>
        <%= submit_tag 'Continuar', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
